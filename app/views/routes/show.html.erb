<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @route.name %>
</p>

<p>
  <strong>Stations in the route:</strong>
</p>

<p>
  <% if @route.railway_stations.empty? %>
    Route has no stations
  <% else %>
  <table>
    <thead>
    <tr>
      <td width="100px">Title</td>
      <td>Position</td>
    </tr>
    </thead>
    <tbody>
    <% @route.railway_stations.ordered.each do |station| %>
      <tr>
        <td><%= station.title %></td>
        <td>
        <%= form_tag update_position_railway_station_path(station), method: :patch do %>
          <%= number_field_tag :position, station.position_in(@route) %>
          <%= hidden_field_tag :route_id, @route_id %>
            <%= submit_tag "Update" %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
</p>

<p>
  <strong>Trains in the route:</strong>
</p>

<p>
  <% if @route.trains.empty? %>
    Route has no trains
  <% else %>
  <ul>
    <% @route.trains.each do |train| %>
      <li><%= train.number %></li>
    <% end %>
  </ul>
<% end %>
</p>


<%= link_to 'Edit', edit_route_path(@route) %> |
<%= link_to 'Back', routes_path %>
