<p id="notice"><%= notice %></p>

<h1>Waggons</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @waggons.each do |waggon| %>
      <tr>
        <td><%= waggon.id %></td>
        <td><%= link_to 'Show', waggon %></td>
        <td><%= link_to 'Edit', edit_waggon_path(waggon) %></td>
        <td><%= link_to 'Destroy', waggon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

